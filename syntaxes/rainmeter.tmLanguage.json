{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "rainmeter",
    "patterns": [{
            "include": "#strings"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#entities"
        },
        {
            "include": "#primatives"
        },
        {
            "include": "#variables"
        },
        {
            "include": "#comments"
        }
    ],
    "repository": {
        "keywords": {
            "patterns": [{
                    "name": "keyword.control.rainmeter",
                    "match": "^[\\s]*?[A-Za-z0-9]+"
                },
                {
                    "name": "keyword.operator.rainmeter",
                    "match": "(=|\\+|\\-|\\?|:)"
                },
                {
                    "name": "entity.name.function.rainmeter",
                    "match": "!\\w+"
                }, {
                    "name": "variable.parameter.rainmeter",
                    "match": "^@\\w+"
                }
            ]
        },
        "strings": {
            "name": "string.quoted.double.rainmeter",
            "begin": "\"",
            "end": "\"",
            "patterns": [{
                    "name": "constant.character.escape.rainmeter",
                    "match": "\\\\."
                },
                {
                    "name": "variable.parameter.rainmeter",
                    "match": "(#.*?#|\\$.*?\\$)"
                }
            ]
        },
        "entities": {
            "name": "entity.name.type.rainmeter",
            "begin": "\\[",
            "end": "\\]",
            "patterns": [{
                    "name": "variable.parameter.rainmeter",
                    "match": "(#.*?#|\\$.*?\\$)"
                },
                {
                    "name": "entity.name.function.rainmeter",
                    "match": "!\\w+"
                },
                {
                    "name": "string.quoted.double.rainmeter",
                    "match": "\".*?\""
                }
            ]
        },
        "primatives": {
            "patterns": [{
                "name": "constant.numeric.rainmeter",
                "match": "\\d"
            }]
        },
        "variables": {
            "patterns": [{
                "name": "variable.parameter.rainmeter",
                "match": "(#.*?#|\\$.*?\\$)"
            }]
        },
        "comments": {
            "patterns": [{
                "name": "comment.block.rainmeter",
                "match": ";.*"
            }]
        }
    },
    "scopeName": "source.rainmeter"
}